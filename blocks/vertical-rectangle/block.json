{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "placeholders/vertical-rectangle",
  "title": "Vertical Rectangle (240×400)",
  "category": "placeholders",
  "icon": "format-image",
  "description": "Vertical Rectangle ad placeholder - 240×400 pixels",
  "keywords": [
    "ad",
    "placeholder",
    "vertical",
    "rectangle",
    "240x400"
  ],
  "textdomain": "placeholders",
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "color": {
      "background": true,
      "text": true
    }
  },
  "attributes": {
    "backgroundColor": {
      "type": "string",
      "default": "#f0f0f0"
    },
    "textColor": {
      "type": "string",
      "default": "#666666"
    },
    "responsive": {
      "type": "boolean",
      "default": false
    },
    "mobileSize": {
      "type": "string",
      "default": ""
    },
    "tabletSize": {
      "type": "string",
      "default": ""
    }
  }
}
