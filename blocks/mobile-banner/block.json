{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "placeholders/mobile-banner",
	"title": "Mobile Banner (320×50)",
	"category": "placeholders",
	"icon": "format-image",
	"description": "Mobile Banner ad placeholder - 320×50 pixels",
	"keywords": ["ad", "placeholder", "mobile", "banner", "320x50"],
	"textdomain": "placeholders",
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"color": {
			"background": true,
			"text": true
		}
	},
	"attributes": {
		"backgroundColor": {
			"type": "string",
			"default": "#f0f0f0"
		},
		"textColor": {
			"type": "string",
			"default": "#666666"
		}
	}
}
